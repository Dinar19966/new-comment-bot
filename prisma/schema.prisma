generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id              String   @id @default(uuid())
  phone           String   @unique
  accessToken     String?
  refreshToken    String?
  accessExpiresAt DateTime?
  status          String   @default("active") // active | need_reauth
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
